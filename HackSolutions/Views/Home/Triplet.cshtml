@model HackSolutions.Models.TripletModel;

@{
    ViewData["Title"] = "Triplet";
}

<h2>Triplet</h2>

<form asp-action="Triplet" asp-controller="Home" method="POST">
    <div class="container col-xs-6">
        <div class="row">
            <h4>Enter Ratings Values below:</h4>

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="w-25">Name</th>
                        <th>Rating 1</th>
                        <th>Rating 2</th>
                        <th>Rating 3</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.TripletList.Count; i++)
                    {
                        <tr>
                            <td>
                                <label>@Model.TripletList[i].name</label>
                            </td>
                            <td>
                                <input asp-for="@Model.TripletList[i].rating1" class="form-control small_inp_box" />
                            </td>
                            <td>
                                <input asp-for="@Model.TripletList[i].rating2" class="small_inp_box" />
                            </td>
                            <td>
                                <input asp-for="@Model.TripletList[i].rating3" class="form-control small_inp_box" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div style="clear:both"></div>
    <div class="container col-xs-6">
        <div class="row">
            <p><a asp-action="Create">Enter Ratings Values below:</a></p>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="w-25">Name</th>
                        <th>Rating 1</th>
                        <th>Rating 2</th>
                        <th>Rating 3</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TripletList)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.TextBoxFor(modelItem => item.rating1, new { @class = "form-control small_inp_box" })
                            </td>
                            <td>
                                @Html.TextBoxFor(modelItem => item.rating2, new { @class = "form-control small_inp_box" })
                            </td>
                            <td>
                                @Html.TextBoxFor(modelItem => item.rating3, new { @class = "form-control small_inp_box" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div style="clear:both"></div>
    <input type="submit" name="Submit" class="btn btn-outline-dark" />
</form>


@section scripts{
    <script>
        // A $( document ).ready() block.
        $(document).ready(function () {
            console.log("ready to rock and roll!");
        });
    </script>
}

